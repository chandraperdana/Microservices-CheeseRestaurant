@model IEnumerable<ProductDto>

<form>
    <div class="container row">

        @foreach (var product in Model)
        {
            <div class="col-md-4 ">
                <div class="p-0 my-3">
                    <div class="card border-primary">
                        <img src="@product.ImageUrl" class="card-img-top">
                        <div class="card-body">
                            <h3 class="card-title">@product.Name</h3>
                            <span class="text-success mb-2 ">@product.CategoryName</span>
                            <p class="card-text">@Html.Raw(product.Description)</p>
                            <div class="row">
                                <div class="col pt-1">
                                    <span style="font-size:23px;" class="text-warning">@string.Format("{0:c}",product.Price)</span>
                                </div>
                                <div class="col">
                                    <a asp-action="Details" asp-route-productId="@product.ProductId" class="btn btn-primary form-control">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>
